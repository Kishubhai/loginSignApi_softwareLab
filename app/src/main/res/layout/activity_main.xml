<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="2"
    android:background="@color/green">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ass1"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:layout_height="0dp"
        app:cardCornerRadius="48dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quality"
            android:gravity="center"
            android:textSize="35sp"
            android:fontFamily="@font/bevietnam_regular"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="310dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/bevietnam_regular"
            android:textSize="14sp"
            android:text="Sell your farm fresh products directly to consumers, cutting out the middleman and reducing emissions of the global supply chain. "/>
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join the movement!"
                android:backgroundTint="@color/green"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/bevietnam_regular"
                android:layout_marginTop="28dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/bevietnam_regular"
                android:textSize="14sp"/>
            <View
                android:layout_width="32dp"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>