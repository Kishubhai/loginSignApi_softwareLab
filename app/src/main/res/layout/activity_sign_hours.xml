<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="23dp"
    android:background="@color/white"
    tools:context=".signupp.Sign_Hours">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FarmerEats"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bevietnam_regular"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup 4 of 4"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintStart_toStartOf="@id/txt1"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bevietnam_regular"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/txt3"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintStart_toStartOf="@id/txt1"
        android:text="Bussiness Hours"
        android:textSize="32sp"
        android:fontFamily="@font/bevietnam_regular"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt4"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Choose the hours your farm is open for pickups. This will allow customers to order deliveries."
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/bevietnam_regular"
        />
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txt4"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        app:layout_constraintEnd_toEndOf="@id/txt4"
        android:weightSum="7"
        android:layout_marginTop="28dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/monn"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_weight="1"
android:background="@drawable/shape_hours"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="M"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/bevietnam_regular"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/tuess"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="4dp"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="T"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/bevietnam_regular"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/wedd"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="4dp"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/shape_hours">
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="W"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/bevietnam_regular"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/thurss"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="4dp"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/shape_hours">
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Th"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/bevietnam_regular"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/frii"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="4dp"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/shape_hours">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/bevietnam_regular"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/satt"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="4dp"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/shape_hours">
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="S"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/bevietnam_regular"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/sunn"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="4dp"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/shape_hours">
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Su"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/bevietnam_regular"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:weightSum="2"
        android:layout_marginTop="8dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/eight_am"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:cardCornerRadius="4dp"
            android:background="@drawable/shape_hours"
            android:layout_weight="1">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00am - 10:00am "/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/ten_am"
            android:layout_width="0dp"
            app:cardCornerRadius="4dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_hours"
            android:layout_weight="1">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00am - 1:00pm "/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        android:weightSum="2"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/one_pm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:cardCornerRadius="4dp"
            android:background="@drawable/shape_hours"
            android:layout_weight="1">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:00pm - 4:00pm "/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/four_pm"
            android:layout_width="0dp"
            app:cardCornerRadius="4dp"
            android:background="@drawable/shape_hours"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:00pm - 7:00pm "/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll4"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll3"
        android:weightSum="2"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/seven_pm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:cardCornerRadius="4dp"
            android:background="@drawable/shape_hours"

        android:layout_weight="1">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:00pm - 10:00pm "/>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="26dp"
        android:layout_height="26dp"
android:layout_marginBottom="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt1"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="SignUp"
        android:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>